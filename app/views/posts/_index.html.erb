<% posts.each do |post| %>
<div class="row">
  <div class="col-2"><%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, class: "rounded-circle", fallback: "no_image.jpg", size: "50x50" %></div>
  <div class="col-2"><%= post.user.name %></div>
  <div class="col-5"><%= post.created_at.strftime('%Y/%m/%d') %></div>
</div>
<div class="row">
  <div class="col-2"></div>
  <div class="col-10"><%= attachment_image_tag post, :image, format:'jpg', width: '100%', height: '80%' %></div>
</div>
<div class="row my-4">
  <div class="col-2"></div>
  <div class="col-10"><%= link_to post.introduction, post_path(post.id) %></div>
</div>
<div class="row">
  <div class="col-3"></div>
  <div class="col-3">
    <%= link_to '', post_path(post.id), class: 'far fa-comment' %> <%= post.post_comments.count %>
  </div>
  <div class="col-3 like-btn<%= post.id %>">
    <%= render partial: 'likes/like-btn', locals: {post: post} %>
  </div>
  <div class="col-3"></div>
</div>
<hr>
<% end %>
