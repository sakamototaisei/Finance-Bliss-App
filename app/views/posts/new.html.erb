<div class="container min-vh-100">
  <div class="row">
    <div class="col">
      <div class="row pt-5">
        <div class="col-2"></div>
        <div class="col-8 pt-5 pb-4">
          <%= link_to "", posts_path, class: "all-btn fas fa-times fa-3x" %>
        </div>
        <div class="col-2"></div>
      </div>
      <%= form_with model: @post, local:true do |f| %>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
          (最大300文字数)<br>
          <%= f.text_area :introduction, placeholder: "金融リテラシーをあげていきましょう！", size: "30x5", class: "js-text form-control" %>
          <P class="js-text-count pull-right"></P>
        </div>
        <div class="col-2"></div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-2">
        <label>
          <i class="fas fa-image fa-3x"></i>
          <%= f.attachment_field :image, placeholder: "image", class: 'image-up-none' %>
        </label>
        </div>
        <div class="col-5">
          <div class="form-group form-inline">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, size: "30", class: "form-control" %>
          </div>
        </div>
        <div class="col-3">
          <%= f.submit '投稿', class: 'btn new-btn' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>