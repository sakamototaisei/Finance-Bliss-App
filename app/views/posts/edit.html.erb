<div class="container">
  <%= form_with model: @post, local:true do |f| %>
  <div class="row my-5">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="row">
        <div class="col-2"><%= link_to '', post_path(@post.id), class: 'fas fa-times fa-2x' %></div>
        <div class="col-6"><h4>投稿内容を編集</h4></div>
        <div class="col-2"><%= f.submit '保存', class: 'btn btn-primary' %></div>
      </div>
      <div class="row">
        <div class="col"><%= f.attachment_field :image, placeholder: "image" %></div>
      </div>
      <div class="row">
        <div class="col"><%= f.text_area :introduction, placeholder: "金融リテラシーをあげていきましょう！", size: "30x5", class: "form-control" %></div>
  <% end %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>